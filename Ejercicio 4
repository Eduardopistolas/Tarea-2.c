//Problemas simples
#include <stdio.h>

int main() 
{
    float cantidad_invertida, interes_mensual, monto_final;

    
    printf("Ingrese la cantidad invertida: ");
    scanf("%f", &cantidad_invertida);
    printf("Ingrese la tasa de interes mensual (en %%): ");
    scanf("%f", &interes_mensual);
    monto_final = cantidad_invertida + (cantidad_invertida * interes_mensual / 100);
    printf("El monto final al terminar el mes es: %.2f\n", monto_final);

    return 0;
}
